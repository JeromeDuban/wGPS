<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/tool_bar_top_padding">

    <TextView
        android:id="@+id/positionBuffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position du buffer"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/memoireText"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toRightOf="@id/positionBuffer"
        android:layout_toEndOf="@id/positionBuffer"
        android:textColor="#FF8800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAM : "
        android:textSize="20sp" />
    <TextView
        android:id="@+id/memoireValeur"
        android:layout_toRightOf="@id/memoireText"
        android:layout_toEndOf="@id/memoireText"
        android:textColor="#FF8800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/positionBuffer"
        android:orientation="vertical" />


    <TextView
        android:id="@+id/fps"
        android:layout_below="@id/container"
        android:textColor="#33B5E5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fps"
        android:orientation="vertical" />




    <!--<ImageView-->
    <!--android:layout_width="500dp"-->
    <!--android:layout_height="500dp"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:id="@+id/image"/>-->


</RelativeLayout>
